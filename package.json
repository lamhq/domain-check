{
  "name": "monorepo-template",
  "private": true,
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "build:web": "pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=9.15.1"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "pnpm -r lint"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0"
  }
}
